fun fallingDistance(time: Double): Double {
     
    // acceleration due to gravity
    
    val g = 9.8 
    
    // formula used to calculate distance in meters
    val distance = 0.5 * g * time * time
    
    return distance
}
 
  fun main() {
      
    for (i in 1..10) {
        
        val distance = fallingDistance(i.toDouble())
        
        println("Distance fallen after $i seconds: $distance meters")
    }
}
